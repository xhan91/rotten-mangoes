<div class="function-section center-block">
  <h1 class="text-center">
    Log In
  </h1>
  <%= form_tag session_index_path, method: :post do %>
    <div>
      <%= label_tag :email %><br/>
      <%= text_field_tag :email, nil, class: "form-control", placeholder: "Email" %>
    </div>
    <div>
      <%= label_tag :password %><br/>
      <%= password_field_tag :password, nil, class: "form-control", placeholder: "Password" %>
    </div>
    <br>
    <div><%= submit_tag "Log In", class: "btn btn-info btn-block" %></div>
  <% end %>
</div>