<%= form_for @movie do |f| %>
  <% if @movie.errors.any? %>
    <div class="alert alert-warning">
      <%= pluralize(@movie.errors.count, "error") %> prevented this movie from being submitted:
      <ul>
        <% @movie.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div>
    <%= f.label :title%><br>
    <%= f.text_field :title, class: "form-control", placeholder: "Title" %>
  </div>
  <div>
    <%= f.label :release_date %><br>
    <%= f.date_field :release_date, class: "form-control" %>
  </div>
  <div>
    <%= f.label :director %><br>
    <%= f.text_field :director, class: "form-control" %>
  </div>
  <div>
    <%= f.label :runtime_in_minutes %><br>
    <%= f.number_field :runtime_in_minutes, class: "form-control" %>
  </div>
  <div>
    <%= f.label :poster_image_url %><br>
    <%= f.file_field :poster_image_url, class: "form-control" %>
  </div>
  <div>
    <%= f.label :description %><br>
    <%= f.text_area :description, class: "form-control no-resize-ta", row: "5" %>
  </div>
  <br>
  <div>
    <%= f.submit "Submit", class: "btn btn-success btn-block" %> 
  </div>
<% end %>